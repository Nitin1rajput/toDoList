<%- include("header") -%> 


    <div class="box" id="heading">
    <h1> <%=kindOfDay%> </h1>
    </div>
    <div class="box">
      <% task.forEach(function(foundTask){ %>
       <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=foundTask._id%> " onchange="this.form.submit()">
       <p><%=foundTask.task%></p>
      </div>
      <input type="hidden" name="listName", value="<%=kindOfDay%>">
    </form>
     <% }) %>

       <form action="/" method="post" class="item">
        <input type="text" name="task" placeholder="New Task" autocomplete="off">
        <button type="submit" name="submit"value="<%=kindOfDay%>">+</button>
      </form>
        
    </div>
  
    
